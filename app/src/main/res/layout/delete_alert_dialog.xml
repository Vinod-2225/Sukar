<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_background"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:singleLine="true"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_next_regular"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/alertTitle"
        android:text="Are you sure you want to logout?"
        android:singleLine="false"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:fontFamily="@font/avenir_next_regular"
        android:paddingTop="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center" />

    <View
        android:id="@+id/viewAlert"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/alertMessage"
        android:background="#A9A9A9"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/viewAlert">


        <TextView
            android:id="@+id/okText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/viewAlert2"
            android:text="Yes"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#0080FF"
            android:textStyle="normal"
            android:fontFamily="@font/avenir_next_regular"
            android:padding="15dp"
            android:gravity="center" />

        <View
            android:id="@+id/viewAlert2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#A9A9A9"/>

        <TextView
            android:id="@+id/cancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/viewAlert2"
            android:text="No"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#0080FF"
            android:textStyle="normal"
            android:fontFamily="@font/avenir_next_regular"
            android:padding="15dp"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>