<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChocolatebrownwichFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_60sdp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/search_home_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backicon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
                android:src="@drawable/backicon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/header_bg" />

            <include
                android:id="@+id/toolbar_v_one"
                layout="@layout/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/search_lo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_v_one"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_25sdp"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:paddingRight="@dimen/_25sdp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/search_edt"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:cursorVisible="true"
                    android:drawableEnd="@drawable/search_icon"
                    android:drawableRight="@drawable/search_icon"
                    android:drawableTint="@color/black"
                    android:fitsSystemWindows="true"
                    android:hint="Find your cravings"
                    android:imeOptions="actionSearch"
                    android:inputType="textNoSuggestions"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_black_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible" />

                <View
                    android:id="@+id/white_line_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/search_edt"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/black" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/rlchocoimg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/search_home_lo">

    <ImageView
        android:id="@+id/chocoimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/whishlistimg1">
    </ImageView>
    <RelativeLayout
        android:id="@+id/enlargeicon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/heartcircle"
        android:layout_marginTop="@dimen/_20sdp"
        >
        <ImageView
            android:id="@+id/hearticon4"
            android:layout_width="10dp"
            android:layout_height="11dp"
            android:layout_centerInParent="true"
            android:src="@drawable/hearticon">
        </ImageView>
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/enlargeiconrl"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
       android:layout_below="@+id/enlargeicon"
         android:layout_alignParentRight="true"
         android:layout_marginRight="@dimen/_20sdp"

android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/heartcircle"

        >
    <ImageView
        android:id="@+id/enlarge"
        android:layout_width="10dp"
        android:layout_height="11dp"
        android:layout_centerInParent="true"
        android:src="@drawable/enlargepng">

    </ImageView>
     </RelativeLayout>
</RelativeLayout>

    <TextView
        android:id="@+id/chotv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlchocoimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Green Almond Dragees"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp">

    </TextView>

    <TextView
        android:id="@+id/lulutv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chotv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rectanglebg"
        android:text="Lulu Cherie"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp">

    </TextView>

    <TextView
        android:id="@+id/kwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lulutv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="KWD 1.000"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp">

    </TextView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Desription"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp">

    </TextView>

    <TextView
        android:id="@+id/desctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"

        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="6 pieces of brownie sandwiches stuffed and topped with different flavors including chocolate &amp; salted caramel,marshmallow,Duice de Leche cream and caramelized walnuts."

        android:textSize="@dimen/_15sdp">

    </TextView>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/desctv"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/black">

    </TextView>

    <RelativeLayout
        android:id="@+id/sizeqtyrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/_5sdp">


        <RelativeLayout
            android:id="@+id/rlsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/sizetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIZE">

            </TextView>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sizetv"
                android:entries="@array/sizes"
                android:spinnerMode="dropdown">

            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qtyrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/rlsize">

            <TextView
                android:id="@+id/qtytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUANTITY">

            </TextView>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qtytv"
                android:entries="@array/qtys"
                android:spinnerMode="dropdown">

            </Spinner>
        </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/optinal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/sizeqtyrl"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rectanglebg"
        android:paddingLeft="@dimen/_5sdp"
        android:gravity="top"
        android:hint="Special Request (Optional)">

    </EditText>

    <RelativeLayout
        android:id="@+id/addbtn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/optinal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ADD"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_10sdp">

        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/lineview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/addbtn"
        android:background="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center">

    </TextView>
    <TextView
        android:id="@+id/youmaytv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineview"
android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:text="@string/youmay"
        android:gravity="center">

    </TextView>
    <LinearLayout
        android:id="@+id/llpro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_below="@+id/youmaytv"
        android:weightSum="2"
        android:visibility="visible"
        >


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:visibility="visible"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_180sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/whishlistimg1"
                android:layout_marginTop="@dimen/_20sdp">

            </ImageView>
            <RelativeLayout
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"

                android:background="@drawable/heartcircle"
                android:layout_marginTop="@dimen/_40sdp"
                >


                <ImageView
                    android:id="@+id/hearticon"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/hearticon"
                    android:layout_centerInParent="true"
                    >

                </ImageView>
            </RelativeLayout>
            <TextView
                android:id="@+id/shop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Green Almond Dragees">

            </TextView>
            <TextView
                android:id="@+id/shopkwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop2"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="KWD 1.000">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl12"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl1"
            android:layout_marginRight="@dimen/_30sdp"
            android:visibility="visible"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/img12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_180sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/wishlistimg2"
                android:layout_marginTop="@dimen/_20sdp">

            </ImageView>
            <RelativeLayout
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"

                android:background="@drawable/heartcircle"
                android:layout_marginTop="@dimen/_40sdp"
                >


                <ImageView
                    android:id="@+id/hearticon2"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/hearticon"
                    android:layout_centerInParent="true"
                    >

                </ImageView>
            </RelativeLayout>
            <TextView
                android:id="@+id/bluetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img12"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Blue Hazelnut Dragees">

            </TextView>
            <TextView
                android:id="@+id/shopkwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bluetv"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="KWD 1.500">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>