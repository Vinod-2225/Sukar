<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SavedAddressFragment"
    android:layout_marginBottom="@dimen/_100sdp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_60sdp">



    <LinearLayout
        android:id="@+id/search_home_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backicon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/backicon"
                tools:ignore="VectorDrawableCompat" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/header_bg" />

            <include
                android:id="@+id/toolbar_v_one"
                layout="@layout/toolbar_v_one_savedaddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:visibility="visible" />
            <RelativeLayout
                android:id="@+id/addaddrrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/toolbar_v_one">




            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/chatimg"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
              android:layout_centerVertical="true"




                android:src="@drawable/ic_baseline_add_24"
                android:visibility="visible" />
                <TextView
                    android:id="@+id/shippingaddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD SHIPPING ADDRESS"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/chatimg"
                    >

                </TextView>
            </RelativeLayout>
            <TextView
                android:id="@+id/lineone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:text=""
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/addaddrrl"
                android:background="@color/black"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/addrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/search_home_lo">
        <CheckBox
            android:id="@+id/chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp">

        </CheckBox>
        <TextView
            android:id="@+id/hometv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk"
            android:text="Home">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk"
            android:layout_below="@+id/hometv"
            android:text="Building : 101,Flat:29,Salmiya,Kuwait">

        </TextView>
    </RelativeLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:text=""
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/addrl"
        android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/addrl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_below="@+id/line">
        <CheckBox
            android:id="@+id/chk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp">

        </CheckBox>
        <TextView
            android:id="@+id/hometv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk1"
            android:text="Home">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk1"
            android:layout_below="@+id/hometv1"
            android:text="Building : 202,Flat:49,Salmiya,Kuwait">

        </TextView>
    </RelativeLayout>
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:text=""
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/addrl1"
        android:background="@color/black"/>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/donebtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/btn"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Apply"

            android:textSize="@dimen/_10sdp">

        </TextView>
    </RelativeLayout>
</RelativeLayout>