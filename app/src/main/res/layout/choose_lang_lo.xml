<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_llayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/langbackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_app_logo_icon"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/language_sel_lo"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/choose_lang"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:visibility="gone"
       />

    <LinearLayout
        android:id="@+id/language_sel_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ar_acc_btn2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_rc_bg_trans_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/english_btn"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/english"
            android:textSize="@dimen/_15sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ar_acc_btn22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_rc_bg_trans_white"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/arabic_btn"
           android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/arabic"
            android:textSize="@dimen/_15sdp"
             />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
