<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/joose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Header"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView
            android:layout_below="@+id/joose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subheader"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            >

        </TextView>

    </RelativeLayout>
    <TextView
        android:id="@+id/lorem"
        android:layout_below="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipesum dolor sit amet, consectetuer adipiscing elit,seddiam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.Ut wisi "
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        >

    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/lorem"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/btn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            >

        </TextView>
    </RelativeLayout>

</RelativeLayout>